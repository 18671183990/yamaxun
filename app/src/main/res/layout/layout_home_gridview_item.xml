<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_container_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/home_grid_item_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@mipmap/xiezi1"/>

        <TextView
            android:id="@+id/home_grid_item_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="HelloWorld"/>

        <TextView
            android:id="@+id/home_grid_item_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="HelloWorld"
            android:textColor="@color/color_text_red"/>

    </LinearLayout>


</RelativeLayout>