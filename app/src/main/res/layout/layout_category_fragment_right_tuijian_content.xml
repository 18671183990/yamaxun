<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="欢迎来到推荐频道>>"
        android:textColor="#F88017" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/tuijian_grad1_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="推荐分类" />

    <!--推荐分类-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi11" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="POLO衫" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="6dp"
                android:src="@mipmap/xiezi12" />
        </LinearLayout>
    </LinearLayout>
    <!--推荐分类-->

    <com.alan.yamaxun.ui.view.MyListView
        android:id="@+id/right_tuijian_item_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"></com.alan.yamaxun.ui.view.MyListView>

</LinearLayout>

